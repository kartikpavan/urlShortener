<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Url Shrinker</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1>Url Shortner</h1>
      <hr />
      <form action="/shortUrl" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="visually-hidden">Url</label>
        <input
          type="text"
          name="fullUrl"
          id="fullUrl"
          placeholder="URL"
          required
          class="form-control col"
        />
        <button class="btn btn-success my-2">Shrink</button>
      </form>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% for(let s of shorturl) { %>
          <tr>
            <td><a href="<%=s.full%>"><%=s.full%></a></td>
            <td><a href="<%=s.short%>"><%=s.short%></a></td>
            <td><%=s.clicks%></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
